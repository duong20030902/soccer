            width: 100%;
            background: rgba(255, 255, 255, 0.1);
            margin-top: 10px;
            border-radius: 3px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s ease;
        }

        .strength-weak {
            background-color: #e74c3c;
            width: 33.33%;
        }

        .strength-medium {
            background-color: #f39c12;
            width: 66.66%;
