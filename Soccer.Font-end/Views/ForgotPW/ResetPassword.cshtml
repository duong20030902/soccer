    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const resetForm = document.getElementById('reset-password-form');
            const statusMessage = document.getElementById('status-message');
            const loader = document.getElementById('loader');
            const newPasswordInput = document.getElementById('new-password');
            const confirmPasswordInput = document.getElementById('confirm-password');
            const passwordStrengthBar = document.getElementById('password-strength-bar');
            const passwordStrengthText = document.getElementById('password-strength-text');

            // Lấy token và email từ URL (sẽ được truyền từ trang quên mật khẩu)
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');
            const email = urlParams.get('email');

            // Kiểm tra token có hợp lệ không
            // Trong thực tế, bạn sẽ gửi token này đến server để xác thực
            if (!token || !email) {
                showMessage('Liên kết đặt lại mật khẩu không hợp lệ hoặc đã hết hạn. Vui lòng yêu cầu lại.', 'error');
                resetForm.style.display = 'none';
                return;
            }

            // Kiểm tra độ mạnh mật khẩu
            newPasswordInput.addEventListener('input', function() {
                const password = this.value;
                checkPasswordStrength(password);
            });

            function checkPasswordStrength(password) {
                // Xóa các class cũ
                passwordStrengthBar.className = 'password-strength-bar';

                // Hiển thị thanh đánh giá
                passwordStrengthText.style.display = 'block';

                // Kiểm tra độ mạnh
                if (password.length === 0) {
                    passwordStrengthBar.style.width = '0%';
                    passwordStrengthText.textContent = '';
                    passwordStrengthText.style.color = '#aaa';
                    return;
                }

                let strength = 0;

                // Độ dài
                if (password.length >= 8) {
                    strength += 1;
                }

                // Chữ hoa và chữ thường
                if (password.match(/[a-z]/) && password.match(/[A-Z]/)) {
                    strength += 1;
                }

                // Số và ký tự đặc biệt
                if (password.match(/[0-9]/) && password.match(/[^a-zA-Z0-9]/)) {
                    strength += 1;
                }

                // Hiển thị đánh giá dựa vào strength
                if (strength === 1) {
                    passwordStrengthBar.classList.add('strength-weak');
                    passwordStrengthText.textContent = 'Yếu';
                    passwordStrengthText.style.color = '#e74c3c';
                } else if (strength === 2) {
                    passwordStrengthBar.classList.add('strength-medium');
                    passwordStrengthText.textContent = 'Trung bình';
                    passwordStrengthText.style.color = '#f39c12';
                } else if (strength === 3) {
                    passwordStrengthBar.classList.add('strength-strong');
                    passwordStrengthText.textContent = 'Mạnh';
                    passwordStrengthText.style.color = '#27ae60';
                }
            }

            // Hàm hiển thị thông báo
            function showMessage(message, type) {
                statusMessage.textContent = message;
                statusMessage.className = 'status-message';
                statusMessage.classList.add('status-' + type);
                statusMessage.style.display = 'block';

                // Tự động ẩn thông báo sau 5 giây đối với lỗi
                if (type === 'error') {
                    setTimeout(() => {
                        statusMessage.style.display = 'none';
                    }, 5000);
                }
            }

            // Hàm chuyển đổi giai đoạn
            function switchStage(stageId) {
                document.querySelectorAll('.form-stages > div').forEach(stage => {
                    stage.classList.remove('active');
                });
                document.getElementById(stageId).classList.add('active');
            }

            // Xử lý gửi form
            resetForm.addEventListener('submit', function(e) {
                e.preventDefault();

                const newPassword = newPasswordInput.value;
                const confirmPassword = confirmPasswordInput.value;

                // Kiểm tra mật khẩu nhập lại
                if (newPassword !== confirmPassword) {
                    showMessage('Mật khẩu nhập lại không khớp. Vui lòng kiểm tra lại.', 'error');
                    return;
                }

                // Kiểm tra độ mạnh mật khẩu
                if (newPassword.length < 8) {
                    showMessage('Mật khẩu phải có ít nhất 8 ký tự.', 'error');
                    return;
                }

                // Hiển thị loader
                loader.style.display = 'block';

                // Ẩn form tạm thời
                resetForm.style.opacity = '0.5';
                resetForm.style.pointerEvents = 'none';

                // Mô phỏng gọi API đặt lại mật khẩu (delay 2 giây)
                setTimeout(() => {
                    // Ẩn loader
                    loader.style.display = 'none';

                    // Hiển thị thông báo thành công và chuyển sang giai đoạn thành công
                    showMessage('Mật khẩu đã được đặt lại thành công!', 'success');

                    setTimeout(() => {
                        switchStage('stage-success');

                        // Bắt đầu đếm ngược để chuyển hướng
                        startCountdown();
                    }, 1500);
                }, 2000);
            });

            // Đếm ngược và chuyển hướng
            function startCountdown() {
                let seconds = 10;
                const countdownElement = document.getElementById('countdown-seconds');

                const interval = setInterval(() => {
                    seconds--;
                    countdownElement.textContent = seconds;

                    if (seconds <= 0) {
                        clearInterval(interval);
                        // Chuyển hướng đến trang đăng nhập
                        window.location.href = 'auth.html';
                    }
                }, 1000);
            }
        });
