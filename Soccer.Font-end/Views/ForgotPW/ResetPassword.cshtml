        @@keyframes bounce {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-80px) rotate(180deg);
        }

        }

        .soccer-ball:nth-child(1) {
            top: 20px;
            left: 10%;
            animation-delay: 0s;
        }

        .soccer-ball:nth-child(2) {
