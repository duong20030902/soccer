@{
    ViewData["Title"] = "Liên Hệ";
}

<style>
    .contact_icon {
        display: flex; /* Use flexbox for better alignment control */
        justify-content: space-between; /* Space items evenly */
        align-items: center; /* Vertically align items */
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .contact_icon li {
            flex: 1; /* Distribute space equally among items */
            text-align: center; /* Center content within each <li> */
            margin: 0 10px; /* Add spacing between items */
        }

    @@media (max-width: 768px) {
        .contact_icon {
            flex-direction: column;
        }

            .contact_icon li {
                margin: 10px 0;
                width: 100%;
            }
    }
</style>
<div class=innerbannerwrap>
    <div class=content></div>
    <div class=innerbanner><h2 class=bannerHeadline>Liên hệ với <span>chúng tôi</span></h2></div>
</div>
<section class=innerpage_all_wrap>
    <div class=container>
        <div class=row>
            <h2 class=heading>Hãy <span>liên hệ</span></h2>

            <p class=headParagraph>
                Với vai trò là đối tác chiến lược của nhiều sân bóng uy tín và các câu lạc bộ chuyên nghiệp, chúng tôi tự hào mang đến dịch vụ đặt sân nhanh chóng, tiện lợi cùng nhiều ưu đãi hấp dẫn. Chúng tôi hiểu rằng mỗi đội bóng đều có những yêu cầu riêng, và luôn sẵn sàng tư vấn, hỗ trợ để bạn tìm được địa điểm phù hợp nhất. Bên cạnh đó, gian hàng trực tuyến của chúng tôi là điểm đến lý tưởng cho những ai đam mê thể thao. Tại đây, bạn có thể dễ dàng tìm thấy những sản phẩm chất lượng, được tuyển chọn kỹ lưỡng từ các thương hiệu hàng đầu. Dù bạn là một cầu thủ chuyên nghiệp hay chỉ đơn giản yêu thích vận động, chúng tôi luôn có những sản phẩm phù hợp với phong cách và cá tính của bạn. Sự hài lòng của bạn là ưu tiên hàng đầu của chúng tôi.
            </p>

            <div class=innerWrapper>
                <ul class="contact_icon clearfix">
                    <li><a href=tel:0378313640><i class="fa fa-phone"></i> <span>+84 378313640</span></a></li>
                    <li>
                        <a href=mailto:notifi.contact@gmail.com>
                            <i class="fa fa-envelope-o"></i>
                            <span>notifi.contact@gmail.com</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/profile.php?id=61576849465856">
                            <i class="fa fa-facebook"></i>
                            <span>Soccer Club</span>
                        </a>
                    </li>
                    <li>
                        <a target="_blank" href=https://maps.app.goo.gl/bJZZyw8TQdVPnEZS6><i class="fa fa-map-marker"></i> <span>H.Thạch Thất, TP.Hà Nội</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="map_wrapper clearfix">
    <div id=map-section>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119174.95521787263!2d105.43344028522856!3d21.02398755007612!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345bf1f9733b47%3A0x4c611b4ae661c8a2!2zVGjhuqFjaCBUaOG6pXQsIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1747278650154!5m2!1svi!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class=container>
        <div class=row>
            <div class=contact_form>
                <h2 class=heading>Liên hệ với chúng tôi <span>theo mẫu</span></h2>

                <p class=headParagraph>
                    Bạn có bất kỳ câu hỏi nào về dịch vụ đặt sân, các sản phẩm thể thao của chúng tôi, hay muốn hợp tác? Đừng ngần ngại liên hệ với chúng tôi thông qua mẫu dưới đây. Chúng tôi luôn sẵn lòng lắng nghe và phản hồi bạn trong thời gian sớm nhất. Mọi thông tin bạn cung cấp sẽ được bảo mật tuyệt đối và chỉ được sử dụng cho mục đích hỗ trợ bạn một cách tốt nhất. Hãy để chúng tôi đồng hành cùng bạn trên con đường chinh phục những đỉnh cao mới trong thể thao!
                </p>
                <form data-parsley-validate="" name=contact class="formcontact clearfix" id="contactForm">
                    <div class=form-group>
                        <input type=text class=form-control name="entry.1555177848" placeholder=Tên required=""
                               data-parsley-required-message="Vui Lòng Nhập Tên">
                    </div>
                    <div class=form-group>
                        <input type=text class=form-control name="entry.1671076274" placeholder="Số Điện Thoại"
                               required="" data-parsley-required-message="Vui Lòng Nhập Số Điện Thoại">
                    </div>
                    <div class=form-group>
                        <input type=text class=form-control name="entry.1038228263" placeholder="Tiêu Đề"
                               required="" data-parsley-required-message="Vui Lòng Nhập Tiêu Đề">
                    </div>
                    <div class=form-group>
                        <input type=email class=form-control name="entry.2049564133" placeholder=Email
                               required="" data-parsley-required-message="Vui Lòng Nhập Email">
                    </div>
                    <div class=form-group1>
                        <textarea class="form-control textas" name="entry.1581174732" placeholder="Tin Nhắn"
                                  required="" data-parsley-minlength=20
                                  data-parsley-minlength-message="Cố lên! Bạn cần nhập ít nhất một nhận xét 20 từ ..."
                                  data-parsley-validation-threshold=10
                                  data-parsley-maxlength=100></textarea>
                    </div>
                    <button type=submit class="btn btn-red" id=send>Gửi</button>
                    <div class="form-message" id="formMessage"></div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('contactForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent default form submission

        // Validate form using Parsley
        const form = $(this).parsley();
        if (!form.isValid()) {
            return;
        }

        // Google Form submission URL (replace with your form's endpoint)
        const googleFormURL = 'https://docs.google.com/forms/u/0/d/e/1FAIpQLSds4f_xaymiCjMDeY6ucnw4G5KtIJ-jE_qLPROm5YC2MLIkTQ/formResponse';

        // Send data to Google Form
        fetch(googleFormURL, {
            method: 'POST',
            mode: 'no-cors', // Required for Google Forms
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: new URLSearchParams(new FormData(this)).toString()
        })
        .then(() => {
            document.getElementById('formMessage').innerHTML = '<p style="color: green;">Gửi thông tin thành công! Chúng tôi sẽ liên hệ lại sớm.</p>';
            document.getElementById('contactForm').reset();
            form.resetValidation();
        })
        .catch(error => {
            document.getElementById('formMessage').innerHTML = '<p style="color: green;">Gửi thông tin thành công! Chúng tôi sẽ liên hệ lại sớm.</p>';
        });
    });
</script>