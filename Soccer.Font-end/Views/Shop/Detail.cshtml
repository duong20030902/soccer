@{
    string GetImageUrl(string imageUrl)
    {
        if (string.IsNullOrEmpty(imageUrl))
            return "/images/default-product.jpg";

        // Kiểm tra nếu là URL đầy đủ
        if (imageUrl.StartsWith("http://") || imageUrl.StartsWith("https://"))
            return imageUrl;

        // Nếu là đường dẫn local
        return $"/images/{imageUrl}.jpg";
    }
}

<div class="detail-container" style="margin-top:40px; margin-bottom:40px;">
    <div class="product-detail-section">
        <div class="product-detail-layout">
            <!-- Product Images Section -->
            <div class="product-image-section">
                <div class="main-product-image">
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        var firstImage = Model.Images.First();
                        <img id="mainImage" src="@GetImageUrl(firstImage.ImageURL)" alt="@Model.ProductName">
                    }
                    else
                    {
                        <img id="mainImage" src="@GetImageUrl(null)" alt="@Model.ProductName">
                    }
                </div>

                @if (Model.Images != null && Model.Images.Count > 1)
                {
                    <div class="product-thumbnails">
                        @foreach (var image in Model.Images)
                        {
                            <div class="thumbnail-item @(image == Model.Images.First() ? "active" : "")"
                                 onclick="changeMainImage('@GetImageUrl(image.ImageURL)', this)">
                                <img src="@GetImageUrl(image.ImageURL)" alt="@Model.ProductName">
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Product Info Section -->
            <div class="product-info-section">
                <h1 class="product-title">@Model.ProductName</h1>

                <div class="product-rating">
                    <div class="stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(Model.AverageRating))
                            {
                                <i class="fa fa-star star"></i>
                            }
                            else if (i == Math.Ceiling(Model.AverageRating) && Model.AverageRating % 1 != 0)
                            {
                                <i class="fa fa-star-half-o star"></i>
                            }
                            else
                            {
                                <i class="fa fa-star-o star"></i>
                            }
                        }
                    </div>
                    <span class="rating-info">(@Model.AverageRating.ToString("F1")) • @Model.ReviewCount đánh giá</span>
                    <button class="write-review-btn" onclick="scrollToReviewSection()">Viết đánh giá</button>
                </div>

                <div class="product-price-section">
                    <div class="price-main">
                        @string.Format("{0:N0}đ", Model.SalePrice)
                        <span class="price-discount">42% off</span>
                    </div>
                    <p class="price-note">Giá bán (Miễn phí giao hàng)</p>
                </div>

                <div class="product-options">
                    @if (Model.AvailableSizes != null && Model.AvailableSizes.Any())
                    {
                        <div class="option-group">
                            <div class="option-title">📏 Chọn Size</div>
                            <div class="size-options">
                                @foreach (var size in Model.AvailableSizes)
                                {
                                    <a href="#" class="size-option" data-size="@size.SizeId">@size.SizeName</a>
                                }
                            </div>
                        </div>
                    }

                    @if (Model.AvailableColors != null && Model.AvailableColors.Any())
                    {
                        <div class="option-group">
                            <div class="option-title">🎨 Chọn Màu</div>
                            <div class="color-options">
                                @foreach (var color in Model.AvailableColors)
                                {
                                    <a href="#" class="color-option" style="background-color:@color.ColorCode"
                                       title="@color.ColorName" data-color="@color.ColorId"></a>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="product-actions">
                    <a href="#" class="btn-add-cart addToCart"
                       data-productid="@Model.ProductID"
                       data-productname="@Model.ProductName"
                       data-productprice="@Model.SalePrice"
                       data-productimage="@(Model.Images?.FirstOrDefault()?.ImageURL)">
                        🛒 Thêm vào giỏ hàng
                    </a>
                    <a href="#" class="btn-buy-now">⚡ Mua ngay</a>
                    <button class="btn-wishlist">❤️</button>
                </div>

                <div class="product-features">
                    <h5 class="features-title">🎯 Đặc điểm nổi bật</h5>
                    <ul class="features-list">
                        <li>Đổi trả dễ dàng trong 30 ngày</li>
                        <li>Thanh toán an toàn 100%</li>
                        <li>Sản phẩm chính hãng mới 100%</li>
                        <li>Giao hàng miễn phí</li>
                        <li>Bảo hành chính hãng</li>
                        <li>Hỗ trợ khách hàng 24/7</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Feedback Section -->
    <div class="feedback-section" id="reviewSection">
        <div class="feedback-header">
            <h5 class="feedback-title">💬 Phản hồi khách hàng</h5>
            <button class="feedback-toggle" id="feedbackToggleBtn" onclick="toggleFeedbackForm()">
                <i class="fa fa-caret-down"></i> Viết đánh giá
            </button>
        </div>

        <div id="feedbackForm" style="display: none;">
            <form class="feedback-form" data-parsley-validate="" name="contact">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Họ và tên *" required>
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" name="phone" placeholder="Số điện thoại *" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email *" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="subject" placeholder="Tiêu đề đánh giá *" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control textas" name="comment" placeholder="Nội dung đánh giá của bạn *"
                              required data-parsley-minlength="20" rows="5"></textarea>
                </div>
                <button type="submit" class="submit-btn">📝 Gửi đánh giá</button>
            </form>
        </div>
    </div>
</div>

<script>
    function changeMainImage(imageUrl, thumbnail) {
        document.getElementById('mainImage').src = imageUrl;

        // Remove active class from all thumbnails
        document.querySelectorAll('.thumbnail-item').forEach(item => {
            item.classList.remove('active');
        });

        // Add active class to clicked thumbnail
        thumbnail.classList.add('active');
    }

    // Function để scroll xuống phần review và mở form
    function scrollToReviewSection() {
        const reviewSection = document.getElementById('reviewSection');
        const feedbackForm = document.getElementById('feedbackForm');
        const toggleButton = document.getElementById('feedbackToggleBtn');

        if (!reviewSection || !feedbackForm || !toggleButton) {
            console.log('Không tìm thấy elements cần thiết');
            return;
        }

        const buttonIcon = toggleButton.querySelector('i');

        // Scroll smooth đến phần review với offset để tránh bị che bởi header
        const offsetTop = reviewSection.offsetTop - 100; // Trừ 100px để tránh bị che

        window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
        });

        // Delay để scroll hoàn thành rồi mới mở form
        setTimeout(() => {
            // Mở form nếu đang đóng
            if (feedbackForm.style.display === 'none' || feedbackForm.style.display === '') {
                feedbackForm.style.display = 'block';
                if (buttonIcon) {
                    buttonIcon.className = 'fa fa-caret-up';
                }

                // Focus vào input đầu tiên
                const firstInput = feedbackForm.querySelector('input[name="name"]');
                if (firstInput) {
                    setTimeout(() => {
                        firstInput.focus();
                    }, 100);
                }
            }
        }, 1000); // Tăng delay lên 1000ms
    }

    function toggleFeedbackForm() {
        const form = document.getElementById('feedbackForm');
        const button = document.querySelector('.feedback-toggle i');

        if (!form || !button) {
            console.log('Không tìm thấy form hoặc button');
            return;
        }

        if (form.style.display === 'none' || form.style.display === '') {
            form.style.display = 'block';
            button.className = 'fa fa-caret-up';

            // Focus vào input đầu tiên khi mở form
            const firstInput = form.querySelector('input[name="name"]');
            if (firstInput) {
                setTimeout(() => {
                    firstInput.focus();
                }, 100);
            }
        } else {
            form.style.display = 'none';
            button.className = 'fa fa-caret-down';
        }
    }

    // Size selection
    document.querySelectorAll('.size-option').forEach(option => {
        option.addEventListener('click', function(e) {
            e.preventDefault();
            document.querySelectorAll('.size-option').forEach(opt => opt.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // Color selection
    document.querySelectorAll('.color-option').forEach(option => {
        option.addEventListener('click', function(e) {
            e.preventDefault();
            document.querySelectorAll('.color-option').forEach(opt => opt.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // Wishlist toggle
    document.querySelector('.btn-wishlist').addEventListener('click', function() {
        this.classList.toggle('active');
    });
</script>
