@using Soccer.Font_end.ViewModels
@model ProductViewModel
@{
    ViewData["Title"] = Model.ProductName;
}

<style>
    /* Modern Product Detail Design - Matching Index Color Scheme */
    .detail-hero {
        background: linear-gradient(135deg, #FF6B35 0%, #C1272D 100%);
        position: relative;
        padding: 60px 0;
        text-align: center;
        color: #FFFFFF;
        margin-bottom: 40px;
        overflow: hidden;
    }

        .detail-hero::before {
            content: '⚽';
            position: absolute;
            font-size: 12rem;
            opacity: 0.1;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            pointer-events: none;
        }

        .detail-hero h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 2;
        }

            .detail-hero h2 span {
                color: #FFD23F;
            }

    .detail-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .product-detail-section {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(255, 107, 53, 0.15);
        padding: 40px;
        margin-bottom: 30px;
        border: 2px solid #FF8C42;
    }

    .product-detail-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        margin-bottom: 40px;
    }

    /* Product Images Section */
    .product-image-section {
        position: relative;
    }

    .main-product-image {
        width: 100%;
        height: 500px;
        border-radius: 16px;
        overflow: hidden;
        background: #F5F5F5;
        border: 3px solid #FF8C42;
        margin-bottom: 20px;
        position: relative;
    }

        .main-product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            transition: transform 0.4s ease;
        }

        .main-product-image:hover img {
            transform: scale(1.05);
        }

    .product-thumbnails {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .thumbnail-item {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        overflow: hidden;
        border: 3px solid #E0E0E0;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #F5F5F5;
    }

        .thumbnail-item:hover,
        .thumbnail-item.active {
            border-color: #FF6B35;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 107, 53, 0.3);
        }

        .thumbnail-item img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    /* Product Info Section */
    .product-info-section {
        padding-left: 20px;
    }

    .product-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: #2D3748;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
        padding: 12px 0;
        border-bottom: 2px solid #E0E0E0;
    }

    .stars {
        display: flex;
        gap: 4px;
    }

    .star {
        color: #FFD23F;
        font-size: 18px;
    }

    .rating-info {
        margin-left: 12px;
        color: #718096;
        font-weight: 500;
    }

    .write-review-btn {
        background: transparent;
        border: 2px solid #FF6B35;
        color: #FF6B35;
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        margin-left: auto;
    }

        .write-review-btn:hover {
            background: #FF6B35;
            color: #FFFFFF;
        }

    .product-price-section {
        background: linear-gradient(135deg, #FFE8E3, #FFF0ED);
        padding: 24px;
        border-radius: 12px;
        margin-bottom: 30px;
        border: 2px solid #FF8C42;
    }

    .price-main {
        font-size: 2.5rem;
        font-weight: 900;
        background: linear-gradient(135deg, #C1272D, #FF6B35);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
    }

    .price-discount {
        background: linear-gradient(135deg, #FFD23F, #FF6B35);
        color: #1A1A1A;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 700;
        display: inline-block;
        margin-left: 12px;
    }

    .price-note {
        color: #718096;
        font-size: 14px;
        margin-top: 8px;
        font-weight: 500;
    }

    /* Options Section */
    .product-options {
        margin-bottom: 30px;
    }

    .option-group {
        margin-bottom: 25px;
    }

    .option-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2D3748;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .option-title::before {
            content: '';
            width: 4px;
            height: 20px;
            background: linear-gradient(135deg, #FF6B35, #C1272D);
            border-radius: 2px;
        }

    .size-options {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .size-option {
        padding: 12px 18px;
        border: 2px solid #E0E0E0;
        border-radius: 8px;
        background: #FFFFFF;
        color: #2D3748;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        min-width: 50px;
        text-align: center;
    }

        .size-option:hover,
        .size-option.active {
            border-color: #FF6B35;
            background: linear-gradient(135deg, #FF6B35, #FF8C42);
            color: #FFFFFF;
            transform: translateY(-2px);
            text-decoration: none;
        }

    .color-options {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .color-option {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: 3px solid #E0E0E0;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
    }

        .color-option:hover,
        .color-option.active {
            border-color: #FF6B35;
            transform: scale(1.15);
            box-shadow: 0 4px 15px rgba(255, 107, 53, 0.4);
        }

    /* Action Buttons */
    .product-actions {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
    }

    .btn-add-cart {
        flex: 2;
        background: linear-gradient(135deg, #FF6B35, #C1272D);
        color: #FFFFFF;
        border: none;
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-add-cart:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(255, 107, 53, 0.4);
            background: linear-gradient(135deg, #C1272D, #8B0000);
            color: #FFFFFF;
            text-decoration: none;
        }

    .btn-buy-now {
        flex: 2;
        background: #2D3748;
        color: #FFFFFF;
        border: 2px solid #2D3748;
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-buy-now:hover {
            background: #FFFFFF;
            color: #2D3748;
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(45, 55, 72, 0.3);
            text-decoration: none;
        }

    .btn-wishlist {
        width: 60px;
        height: 60px;
        border: 2px solid #E0E0E0;
        background: #FFFFFF;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: #718096;
    }

        .btn-wishlist:hover,
        .btn-wishlist.active {
            border-color: #C1272D;
            color: #C1272D;
            background: linear-gradient(135deg, #FFE8E3, #FFF0ED);
            transform: scale(1.05);
        }

    /* Product Features */
    .product-features {
        background: linear-gradient(135deg, #F7FAFC, #EDF2F7);
        padding: 24px;
        border-radius: 12px;
        border: 2px solid #E0E0E0;
    }

    .features-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2D3748;
        margin-bottom: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .features-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 12px;
    }

        .features-list li {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: #FFFFFF;
            border-radius: 8px;
            border: 1px solid #E0E0E0;
            font-weight: 500;
            color: #2D3748;
        }

            .features-list li::before {
                content: '✓';
                background: linear-gradient(135deg, #FF6B35, #C1272D);
                color: #FFFFFF;
                width: 24px;
                height: 24px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 700;
                font-size: 14px;
            }

    /* Customer Feedback Section */
    .feedback-section {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(255, 107, 53, 0.15);
        padding: 40px;
        border: 2px solid #FF8C42;
    }

    .feedback-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #FFD23F;
    }

    .feedback-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2D3748;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .feedback-toggle {
        background: transparent;
        border: 2px solid #FF6B35;
        color: #FF6B35;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .feedback-toggle:hover {
            background: #FF6B35;
            color: #FFFFFF;
        }

    .feedback-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #E0E0E0;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
        background: #FFFFFF;
    }

        .form-control:focus {
            border-color: #FF6B35;
            box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.15);
            outline: none;
        }

        .form-control.textas {
            min-height: 120px;
            resize: vertical;
            grid-column: 1 / -1;
        }

    .submit-btn {
        background: linear-gradient(135deg, #FF6B35, #C1272D);
        color: #FFFFFF;
        border: none;
        padding: 14px 28px;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        grid-column: 1 / -1;
        justify-self: start;
    }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
            background: linear-gradient(135deg, #C1272D, #8B0000);
        }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .product-detail-layout {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .product-info-section {
            padding-left: 0;
        }

        .product-actions {
            flex-direction: column;
        }

        .btn-wishlist {
            width: 100%;
            height: 50px;
        }

        .detail-hero h2 {
            font-size: 2rem;
        }

        .feedback-form {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 480px) {
        .product-title {
            font-size: 1.8rem;
        }

        .price-main {
            font-size: 2rem;
        }

        .size-options,
        .color-options {
            justify-content: center;
        }
    }

    html {
        scroll-behavior: smooth;
    }

    /* Highlight effect khi scroll đến */
    .feedback-section {
        transition: all 0.3s ease;
    }

        .feedback-section.highlight {
            box-shadow: 0 8px 32px rgba(255, 107, 53, 0.25);
            transform: scale(1.02);
        }
</style>

